{% if template is defined %}
<section id="{{ anchors.educations.href|default('') }}" class="well">
    <h3>{{ anchors.educations.title|default('') }}</h3>
    <dl class="timeline">
    {% for line in educations %}
        <dt>
            <span class="indent"></span>
            <button type="button" class="btn btn-default btn-xs active" data-toggle="collapse" data-target="#education{{ loop.index }}">{{ line.date }}</button>
        </dt>
        <dd>
            <div id="education{{ loop.index }}" class="{% if line.collapse is defined %}collapse {% else %}in{% endif %}">
            {{ line.education }}
            {% for item in line.descriptions.item %}
            <br><small>- {{ item }}</small>
            {% endfor %}
            </div>
        </dd>
    {% endfor %}
    </dl>
</section>
{% else %}
<div id="{{ anchors.educations.href|default('') }}">
    <h3>{{ anchors.educations.title|default('') }} [<a href=#>top</a>]</h3>
    <dl>
    {% for line in educations %}
        <dt>{{ line.date }}</dt>
        <dd>
            {{ line.education }}
            {% for item in line.descriptions.item %}
            <br><small>- {{ item }}</small>
            {% endfor %}
        </dd>
    {% endfor %}
    </dl>
</div>
{% endif %}
