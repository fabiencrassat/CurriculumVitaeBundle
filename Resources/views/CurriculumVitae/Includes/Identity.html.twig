{% set template = template|default("") %}
{% set id       = anchors.identity.href|default('') %}
{% set anchorId = "id=" ~ id ~ "" %}
{% set title    = anchors.identity.title|default('') %}
{% set blocks   = identity %}

{% if blocks is not null %}
{# Display the main section #}
{% if template == "OryzoneBoilerplate" %}
    <section {{ anchorId }} class="well">
        <h3>{{ title }}</h3>
        {{ _self.displayBlockInMainSection(blocks, id, template) }}
    </section>
{% else %}
    <div {{ anchorId }}>
        <h3>{{ title }}{% if template != "pdf" %} [<a href=#>top</a>]{% endif %}</h3>
        {{ _self.displayBlockInMainSection(blocks, id, template) }}
    </div>
{% endif %}
{% endif %}

{# Display each block section in the main section #}
{% macro displayBlockInMainSection(blocks, id, template) %}
    {% import _self as SelfFunction %}
    <address>
        {% if template == "OryzoneBoilerplate" %}
            {% if blocks.address.City is defined and blocks.address.Country is defined %}
            <span class="glyphicon glyphicon-map-marker"></span> <a target="_blank" href="{{ blocks.address.GoogleMap|default('') }}">{{ blocks.address.City }}, {{ blocks.address.Country }}</a><br>
            {% endif %}
            {# <abbr title="Mobile">M:</abbr> {{ blocks.contact.Mobile }}<br> #}
            {% if blocks.contact.Email is defined %}
            <abbr title="Email"><span class="glyphicon glyphicon-envelope"></span> </abbr> <a href="mailto:{{ blocks.contact.Email|default('') }}">{{ blocks.contact.Email|default('') }}</a><br>
            {% endif %}
        {% else %}
            {% if blocks.address.City is defined and blocks.address.Country is defined %}
            <a target="_blank" href="{{ blocks.address.GoogleMap|default('') }}">{{ blocks.address.City }}, {{ blocks.address.Country }}</a><br>
            {% endif %}
            {# M: {{ blocks.contact.Mobile }}<br> #}
            {% if blocks.contact.Email is defined %}
            <a href="mailto:{{ blocks.contact.Email|default('') }}">{{ blocks.contact.Email|default('') }}</a><br>
            {% endif %}
        {% endif %}
        {{ SelfFunction.DisplayMyself(blocks.myself|default('')) }}
        {{ SelfFunction.DisplaySocial(blocks.social|default('')) }}
    </address>
{% endmacro %}

{# Display each item section inside block section #}
{% macro DisplayMyself(myself) %}
    {% if myself.BirthDay is defined and myself.BrithPlace is defined %}
        Né le {{ myself.BirthDay }} à {{ myself.BrithPlace }}<br>
    {% endif %}
    {% if myself.Age is defined %}
        Age: {{ myself.Age }}<br>
    {% endif %}
    {% if myself.Nationality is defined %}
        {{ myself.Nationality }}<br>
    {% endif %}
{% endmacro  %}
{% macro DisplaySocial(social) %}
    {% if social.Marital is defined %}
        {{ social.Marital }}<br>
    {% endif %}
    {% if social.Military is defined %}
        {{ social.Military }}<br>
    {% endif %}
    {% if social.DriveLicences is defined %}
        {{ social.DriveLicences }}<br>
    {% endif %}
{% endmacro  %}
