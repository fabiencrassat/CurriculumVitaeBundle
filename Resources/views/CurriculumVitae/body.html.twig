{# FabienCrassat/CurriculumVitaeBundle/Resources/views/CurriculumVitae/body.html.twig #}

{% set template = template|default("") %}

<div id="CurriculumVitae" class="container">
    {% include '@FabienCrassatCurriculumVitae/CurriculumVitae/Includes/BusinessCard.html.twig' with {'template': template} %}
    {% if template == "OryzoneBoilerplate" %}
        <div class="row">
            <div class="col-md-6">
                {% include '@FabienCrassatCurriculumVitae/CurriculumVitae/Includes/Identity.html.twig' with {'template': 'OryzoneBoilerplate'} %}
            </div>

            <div class="col-md-6">
                {% include '@FabienCrassatCurriculumVitae/CurriculumVitae/Includes/FollowMe.html.twig' with {'template': 'OryzoneBoilerplate'} %}
            </div>
        </div>
    {% else %}
        {% include '@FabienCrassatCurriculumVitae/CurriculumVitae/Includes/Identity.html.twig' with {'template': template} %}
        {% if template != "pdf" %}
        {% include '@FabienCrassatCurriculumVitae/CurriculumVitae/Includes/FollowMe.html.twig' %}
        {% endif %}
    {% endif %}
    {% include '@FabienCrassatCurriculumVitae/CurriculumVitae/Includes/Experiences.html.twig' with {'template': template} %}
    {% include '@FabienCrassatCurriculumVitae/CurriculumVitae/Includes/Skills.html.twig' with {'template': template} %}
    {% include '@FabienCrassatCurriculumVitae/CurriculumVitae/Includes/Educations.html.twig' with {'template': template} %}
    {% include '@FabienCrassatCurriculumVitae/CurriculumVitae/Includes/LanguageSkills.html.twig' with {'template': template} %}
    {% include '@FabienCrassatCurriculumVitae/CurriculumVitae/Includes/Miscellaneous.html.twig' with {'template': template} %}
</div>
